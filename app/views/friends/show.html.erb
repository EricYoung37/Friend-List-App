<p style="color: green"><%= notice %></p>

<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">
      <%= @friend.first_name %> <%= @friend.last_name %>
    </h1>
    <p class="col-md-8 fs-4">
      <%= @friend.email %> |
      <%= @friend.phone %> |
      <%= @friend.twitter %>
    </p>
    <br>
    
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-dark" %>
  
    <%= link_to "Delete", @friend, data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    }, class:"btn btn-secondary" %>
  
    <%= link_to "Friends", friends_path, class:"btn btn-dark" %>
  
    <!--alternative delete-->
    <!--<%= button_to "Destroy this friend", @friend, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>-->

  </div>
</div>
